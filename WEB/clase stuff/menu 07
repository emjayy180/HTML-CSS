/* Style 2: Just transform 10px up and 10px down */
ul li a:hover {
  animation: anim2 500ms ease infinite;
}


@keyframes anim2 {
  0% {
    opacity: 1;
    transform: translateY(px);
   
  }

  25% {
    opacity: 0;
    transform: translateY(-10px);
 
  }

  50% {
    opacity: 1;
    transform: translateY(px);
   
  }

  75% {
    opacity: 0;
    transform: translateY(10px);
    
  }

  100% {
    opacity: 1;
    transform: translateY(px);
    
  }
}

@keyframes anim3 {
  0% {
    background-color: green;
    transform: scale(1);
  }

  50% {
    background-color: blue;
    transform: scale(2);
  }

  100% {
    background-color: green;
    transform: scale(1);
  }
}
